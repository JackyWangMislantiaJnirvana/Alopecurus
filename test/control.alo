local x, y

-- if statement

x = true

if (!x) {
	assert(false)
}

-- multi if-else statement

x = 0

if (x == 1) {
	assert(false)
}
else if (x == 0) {
	
}
else {
	assert(false)
}

-- while and break statement

x = 0

while (x < 10) {
	if (x == 3) 
		break
	x += 1
}

assert(x == 3)

-- while-else statement

x = 1

while (x < 10) {
	x += 1
}
else {
	x = 0
}

assert(x == 0)

x = 1

while (x < 5) {
	if (x == 2)
		break
	x += 1
}
else {
	x = 1
}

assert(x == 2)

-- do-while statement

x = 1
do {
	x += 1
}
while (x < 5)

assert(x == 5)

-- for statement

x = [1, 2, 3]
y = 0
for (i <- x) {
	y += i
}

assert(y == 6)
